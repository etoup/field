extends ../layout

block content
  .row
    .col-xs-12
      .box.box-default
        .box-header.with-border
          h3.box-title 搜索   
          .box-tools.pull-right
            button.btn.btn-box-tool(data-widget='collapse')
              i.fa.fa-minus               
            button.btn.btn-box-tool(data-widget='remove')
              i.fa.fa-remove
        form
          .box-body
            .row
              .col-md-3
                .form-group
                  label 邮箱                
                  input.form-control(type='email', placeholder='邮箱地址')   
              .col-md-3       
                .form-group
                  label 手机号码                  
                  input.form-control(type='tel', placeholder='手机号码')   
          // /.box-body
          .box-footer  
            button.btn.btn-info.pull-right(type='submit') 搜索
      .box
        .box-header
          h3.box-title 用户列表         
          .box-tools
            .input-group(style='width: 150px;')
              input.form-control.input-sm.pull-right(type='text', name='table_search', placeholder='搜索')          
              .input-group-btn
                button.btn.btn-sm.btn-default
                  i.fa.fa-search
        // /.box-header
        .box-body.table-responsive.no-padding
          table.table.table-hover
            tr                 
              th 邮箱                  
              th 手机号码                   
              th 状态           
              th 注册时间
              th 最后登录时间
              th 操作         
            each item in users  
              tr            
                td #{item.email}                 
                td #{item.mobile}              
                td
                  span.label.label-success 激活   
                td #{moment(item.meta.createAt).format('YYYY-MM-DD HH:mm')}   
                td #{moment(item.lastLoginAt).format('YYYY-MM-DD HH:mm')}    
                td     
                  a(href="/admin/setting/edit/#{item._id}",data-toggle="modal",data-target="#modal_#{item._id}")
                    button.btn.btn-block.btn-success.btn-xs(type='button') 编辑
              .modal.modal.fade(id="modal_#{item._id}",tabindex="-1",role="dialog")
                .modal-dialog
                  .modal-content
              
        .modal.modal.fade(id="myModal",tabindex="-1",role="dialog")
          .modal-dialog
            .modal-content
              form(id='form',action='/admin/setting/dopicture', method='post',role='form')
                .modal-header
                  button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') &times;               
                  h4.modal-title 新增全局设置                 
                .modal-body
                  .box-body
                    .form-group
                      label(for='tag') 设置标识                
                      input#tag.form-control(type='text', name="set[tag]",placeholder='设置标识')   
                    .form-group
                      label(for='title') 设置标题                
                      input#title.form-control(type='text', name="set[title]",placeholder='设置标题')                  
                    .form-group
                      label(for='vals') 设置值                    
                      input#vals.form-control(type='text', name="set[vals]",placeholder='设置值')       
                    .form-group
                      label(for='remark') 相关说明                    
                      input#remark.form-control(type='text', name="set[remark]",placeholder='设置相关说明')              
                .modal-footer
                  button.btn.btn-default.pull-left(type='button', data-dismiss='modal') 关闭        
                  button.btn.btn-primary(type='submit') 提交